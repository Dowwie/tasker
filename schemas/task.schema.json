{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "description": "Individual task definition - one file per task for parallel work",
  "type": "object",
  "required": ["id", "name", "phase", "behaviors", "files", "acceptance_criteria"],
  "definitions": {
    "spec_ref": {
      "description": "Reference to source spec content. Supports legacy string, content-based quote, or refactor reference.",
      "oneOf": [
        {
          "type": "string",
          "description": "Legacy format: section reference like 'Section 2.1'"
        },
        {
          "type": "object",
          "description": "Content-based format: quoted spec text with optional location",
          "required": ["quote"],
          "properties": {
            "quote": {
              "type": "string",
              "minLength": 10,
              "description": "Verbatim text from the spec that defines this requirement"
            },
            "location": {
              "type": "string",
              "description": "Best-effort location hint: line number, paragraph, section, etc."
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "description": "Refactor reference: directive that supersedes original spec sections",
          "required": ["refactor_ref"],
          "properties": {
            "refactor_ref": {
              "type": "string",
              "minLength": 10,
              "description": "The refactor directive that takes priority over original spec"
            },
            "supersedes": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Original spec sections this refactor overrides"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "properties": {
    "id": { "type": "string", "pattern": "^T[0-9]+$" },
    "name": { "type": "string" },
    "phase": { "type": "integer", "minimum": 1 },

    "task_type": {
      "type": "string",
      "enum": ["feature", "refactor", "bugfix", "test"],
      "default": "feature",
      "description": "Type of task - refactor tasks have special validation rules"
    },

    "context": {
      "type": "object",
      "properties": {
        "domain": { "type": "string" },
        "capability": { "type": "string" },
        "spec_ref": { "$ref": "#/definitions/spec_ref" },
        "spec_requirements": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Explicit requirement IDs this task implements (e.g., REQ-001, R1.2)"
        },
        "steel_thread": { "type": "boolean", "default": false }
      }
    },

    "refactor_context": {
      "type": "object",
      "description": "Required context for refactor tasks - documents what is being changed and why",
      "properties": {
        "original_spec_sections": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Spec sections being refactored/superseded"
        },
        "refactor_directive": {
          "type": "string",
          "description": "The refactor requirement that takes priority"
        },
        "design_changes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Explicit deviations from original design"
        }
      }
    },

    "behaviors": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "description": "Behavior IDs from capability map" }
    },

    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "action"],
        "properties": {
          "path": { "type": "string" },
          "action": { "enum": ["create", "modify", "delete"] },
          "purpose": { "type": "string" }
        }
      }
    },

    "dependencies": {
      "type": "object",
      "properties": {
        "tasks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Task IDs that must complete before this one"
        },
        "external": {
          "type": "array",
          "items": { "type": "string" },
          "description": "External prerequisites (libraries, services, etc.)"
        }
      }
    },

    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["criterion", "verification"],
        "properties": {
          "criterion": {
            "type": "string",
            "minLength": 20,
            "description": "Specific, measurable acceptance criterion"
          },
          "verification": {
            "type": "string",
            "minLength": 10,
            "pattern": "^(pytest|python|bash|grep|test|curl|npm|make|go|ruff|cargo|node|yarn|pnpm|dotnet|mvn|gradle)\\s+",
            "description": "Executable command that returns pass/fail"
          }
        }
      }
    },

    "estimate_hours": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 8
    }
  }
}
