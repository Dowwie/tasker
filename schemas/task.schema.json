{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "description": "Individual task definition - one file per task for parallel work",
  "type": "object",
  "required": ["id", "name", "wave", "atoms", "files", "acceptance_criteria"],
  "properties": {
    "id": { "type": "string", "pattern": "^T[0-9]+$" },
    "name": { "type": "string" },
    "wave": { "type": "integer", "minimum": 1 },
    
    "context": {
      "type": "object",
      "properties": {
        "domain": { "type": "string" },
        "capability": { "type": "string" },
        "spec_ref": { "type": "string" },
        "steel_thread": { "type": "boolean", "default": false }
      }
    },
    
    "atoms": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "description": "Atom IDs from capability map" }
    },
    
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "action"],
        "properties": {
          "path": { "type": "string" },
          "action": { "enum": ["create", "modify", "delete"] },
          "purpose": { "type": "string" }
        }
      }
    },
    
    "dependencies": {
      "type": "object",
      "properties": {
        "tasks": { 
          "type": "array", 
          "items": { "type": "string" },
          "description": "Task IDs that must complete before this one"
        },
        "external": {
          "type": "array",
          "items": { "type": "string" },
          "description": "External prerequisites (libraries, services, etc.)"
        }
      }
    },
    
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["criterion", "verification"],
        "properties": {
          "criterion": { "type": "string" },
          "verification": { 
            "type": "string",
            "description": "Command or check that returns pass/fail"
          }
        }
      }
    },
    
    "estimate_hours": { 
      "type": "number", 
      "minimum": 0.5, 
      "maximum": 8 
    }
  }
}
