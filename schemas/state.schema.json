{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DecompositionState",
  "description": "Single source of truth for decomposition progress",
  "type": "object",
  "required": ["version", "phase", "target_dir", "created_at", "artifacts", "tasks"],
  "properties": {
    "version": { "const": "2.0" },
    
    "phase": {
      "type": "object",
      "required": ["current", "completed"],
      "properties": {
        "current": { 
          "enum": ["ingestion", "logical", "physical", "definition", "sequencing", "ready", "executing", "complete"] 
        },
        "completed": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    
    "target_dir": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    
    "artifacts": {
      "type": "object",
      "properties": {
        "capability_map": {
          "type": "object",
          "properties": {
            "path": { "type": "string" },
            "checksum": { "type": "string" },
            "valid": { "type": "boolean" },
            "validated_at": { "type": "string", "format": "date-time" }
          }
        },
        "physical_map": { "$ref": "#/properties/artifacts/properties/capability_map" },
        "dependency_graph": { "$ref": "#/properties/artifacts/properties/capability_map" },
        "spec_coverage": {
          "type": "object",
          "description": "Tracking of spec requirement coverage by tasks",
          "properties": {
            "requirements": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "description": "Requirement identifier (e.g., REQ-001)" },
                  "text": { "type": "string", "description": "Requirement text from spec" },
                  "source_line": { "type": "integer", "description": "Line number in spec file" },
                  "covered_by": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Task IDs that implement this requirement"
                  }
                }
              }
            },
            "coverage_pct": { "type": "number", "minimum": 0, "maximum": 100 },
            "covered_count": { "type": "integer" },
            "total_count": { "type": "integer" },
            "uncovered": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Requirement IDs with no covering tasks"
            },
            "computed_at": { "type": "string", "format": "date-time" }
          }
        },
        "task_validation": {
          "type": "object",
          "description": "Results from task-plan-verifier",
          "properties": {
            "verdict": { "enum": ["READY", "READY_WITH_NOTES", "BLOCKED"] },
            "valid": { "type": "boolean" },
            "summary": { "type": "string" },
            "issues": { "type": "array", "items": { "type": "string" } },
            "validated_at": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "status", "phase"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "status": { "enum": ["pending", "ready", "running", "complete", "failed", "blocked", "skipped"] },
          "phase": { "type": "integer" },
          "depends_on": { "type": "array", "items": { "type": "string" } },
          "blocks": { "type": "array", "items": { "type": "string" } },
          "started_at": { "type": "string", "format": "date-time" },
          "completed_at": { "type": "string", "format": "date-time" },
          "error": { "type": "string" },
          "failure": {
            "type": "object",
            "description": "Structured failure information for failed tasks",
            "properties": {
              "category": {
                "enum": ["dependency", "implementation", "verification", "environment", "scope", "other"],
                "description": "Primary failure category"
              },
              "subcategory": {
                "type": "string",
                "description": "More specific failure type within category"
              },
              "retryable": {
                "type": "boolean",
                "default": true,
                "description": "Whether this failure type is typically recoverable"
              }
            }
          },
          "files_created": { "type": "array", "items": { "type": "string" } },
          "files_modified": { "type": "array", "items": { "type": "string" } },
          "attempts": { "type": "integer", "minimum": 0, "default": 0 },
          "duration_seconds": { "type": "number", "minimum": 0 },
          "verification": {
            "type": "object",
            "properties": {
              "verdict": { "enum": ["PASS", "FAIL", "CONDITIONAL"] },
              "recommendation": { "enum": ["PROCEED", "BLOCK"] },
              "criteria": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "score"],
                  "properties": {
                    "name": { "type": "string" },
                    "score": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                    "evidence": { "type": "string" }
                  }
                }
              },
              "quality": {
                "type": "object",
                "properties": {
                  "types": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                  "docs": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                  "patterns": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                  "errors": { "enum": ["PASS", "PARTIAL", "FAIL"] }
                }
              },
              "tests": {
                "type": "object",
                "properties": {
                  "coverage": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                  "assertions": { "enum": ["PASS", "PARTIAL", "FAIL"] },
                  "edge_cases": { "enum": ["PASS", "PARTIAL", "FAIL"] }
                }
              },
              "verified_at": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    },
    
    "execution": {
      "type": "object",
      "properties": {
        "current_phase": { "type": "integer" },
        "active_tasks": { "type": "array", "items": { "type": "string" } },
        "completed_count": { "type": "integer" },
        "failed_count": { "type": "integer" },
        "total_tokens": { "type": "integer" },
        "total_cost_usd": { "type": "number" }
      }
    },
    
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "type"],
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "type": { "type": "string" },
          "task_id": { "type": "string" },
          "details": { "type": "object" }
        }
      }
    }
  }
}
