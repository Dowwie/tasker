{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CapabilityMap",
  "description": "Phase 1 output: Logical decomposition of spec into domains, capabilities, and behaviors",
  "type": "object",
  "required": ["version", "domains", "flows", "phase_filtering"],
  "definitions": {
    "spec_ref": {
      "description": "Reference to source spec content. Supports both legacy string format and content-based format.",
      "oneOf": [
        {
          "type": "string",
          "description": "Legacy format: section reference like 'Section 2.1'"
        },
        {
          "type": "object",
          "description": "Content-based format: quoted spec text with optional location",
          "required": ["quote"],
          "properties": {
            "quote": {
              "type": "string",
              "description": "Verbatim text from the spec that defines this requirement"
            },
            "location": {
              "type": "string",
              "description": "Best-effort location hint: line number, paragraph, section, etc."
            }
          }
        }
      ]
    }
  },
  "properties": {
    "version": { "const": "1.0" },
    "spec_checksum": { "type": "string", "description": "SHA256 of source spec for change detection" },

    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "capabilities"],
        "properties": {
          "id": { "type": "string", "pattern": "^D[0-9]+$" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "behaviors"],
              "properties": {
                "id": { "type": "string", "pattern": "^C[0-9]+$" },
                "name": { "type": "string" },
                "spec_ref": { "$ref": "#/definitions/spec_ref" },
                "behaviors": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["id", "name", "type"],
                    "properties": {
                      "id": { "type": "string", "pattern": "^B[0-9]+$" },
                      "name": { "type": "string" },
                      "type": { "enum": ["input", "process", "state", "output", "activation"] },
                      "description": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "flows": {
      "type": "array",
      "description": "End-to-end user journeys mapped to behaviors",
      "items": {
        "type": "object",
        "required": ["id", "name", "steps"],
        "properties": {
          "id": { "type": "string", "pattern": "^F[0-9]+$" },
          "name": { "type": "string" },
          "is_steel_thread": { "type": "boolean", "default": false },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["behavior_id"],
              "properties": {
                "order": { "type": "integer" },
                "behavior_id": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          }
        }
      }
    },

    "coverage": {
      "type": "object",
      "description": "Validation that all spec requirements map to behaviors",
      "properties": {
        "total_requirements": { "type": "integer" },
        "covered_requirements": { "type": "integer" },
        "gaps": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "phase_filtering": {
      "type": "object",
      "description": "Documents which development phases were processed vs excluded",
      "required": ["active_phase", "excluded_phases", "total_excluded_requirements"],
      "properties": {
        "active_phase": {
          "type": "integer",
          "description": "The phase being planned (always 1 for now)",
          "const": 1
        },
        "excluded_phases": {
          "type": "array",
          "description": "Phases that were identified but excluded from planning",
          "items": {
            "type": "object",
            "required": ["phase", "heading", "summary"],
            "properties": {
              "phase": {
                "type": "integer",
                "description": "Phase number (2, 3, etc.)"
              },
              "heading": {
                "type": "string",
                "description": "The heading text that marked this phase in the spec"
              },
              "location": {
                "type": "string",
                "description": "Best-effort location in spec (line number, etc.)"
              },
              "summary": {
                "type": "string",
                "description": "Brief summary of what was excluded"
              }
            }
          }
        },
        "total_excluded_requirements": {
          "type": "integer",
          "description": "Count of requirements that were excluded"
        }
      }
    }
  }
}
